# ===========================================
# Kanban Board - Environment Variables
# ===========================================

# Copy this file to .env and fill in your API keys

# ===========================================
# AI API Configuration (Choose one or more)
# ===========================================

# Groq API - Recommended (Primary)
# Get your key at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API - Alternative
# Get your key at: https://ai.google.dev
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama - Local fallback (optional)
# Install from: https://ollama.com
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# ===========================================
# Telegram Bot Configuration
# ===========================================

# Get token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# ===========================================
# Google Calendar Configuration
# ===========================================

# Create credentials at: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# ===========================================
# Application Configuration
# ===========================================

# Environment
ENVIRONMENT=development
DEBUG=true

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000

# Frontend
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=sqlite:///./data/kanban.db

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Task storage
TASKS_DIR=./data/tasks

# ===========================================
# Security
# ===========================================

# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production

# CORS origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# AI Configuration
# ===========================================

# Default AI provider: groq, gemini, or ollama
DEFAULT_AI_PROVIDER=groq

# AI request timeout (seconds)
AI_TIMEOUT=30

# Enable AI caching
AI_CACHE_ENABLED=true

# Cache duration (minutes)
AI_CACHE_TTL=60
